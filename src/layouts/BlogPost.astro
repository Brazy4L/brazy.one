---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import readingTime from '../js/readingTime';
import { Icon } from 'astro-icon';

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
const timeToRead = readingTime(Astro.props.compiledContent());
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} | BRAZY'S BLOG`}
      description={description}
      image={heroImage}
    />
  </head>
  <body class="min-h-screen flex flex-col max-w-[700px] mx-auto px-2">
    <Header />
    <main>
      <article class="mt-10 mb-10">
        <h1 class="text-3xl font-bold text-gray-200 text-center">
          {title}
        </h1>
        <div
          class="flex flex-wrap justify-center gap-x-1 text-gray-400 text-center mt-3"
        >
          {pubDate && <time>{pubDate}</time>}
          {
            updatedDate && (
              <span>
                (Updated: <time>{updatedDate}</time>)
              </span>
            )
          }
          {
            timeToRead && (
              <span class="flex gap-x-1">
                <Icon
                  class="self-center"
                  width="23px"
                  height="23px"
                  name="maki:watch"
                />
                {timeToRead}
              </span>
            )
          }
        </div>
        <p class="text-gray-400 text-center">by Vladislav Boichenko</p>
        {
          heroImage && (
            <img
              class="rounded-sm mt-10"
              width="684"
              height="342"
              src={heroImage}
              alt="Illustration by Vladislav Boichenko"
            />
          )
        }
        <article class="post">
          <slot />
        </article>
        <div class="text-gray-200 mt-10">
          <a
            href="/blog/"
            rel="prefetch"
            class="flex gap-x-1 items-center underline"
          >
            <Icon width="21px" height="21px" name="maki:arrow" />
            <div>Back to BRAZY'S BLOG</div>
          </a>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
